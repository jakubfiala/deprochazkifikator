{
"manifest_version": 2,
    "name": "Deprocházkifikátor",
    "description": "Nahraď meno svojho potenciálneho premiéra niečim vhodnejším.",
    "version": "1.0",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
      "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}